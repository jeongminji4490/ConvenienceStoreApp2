<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D9FB1"
    tools:context=".FindPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/gmarketsansttfmedium"
        android:text="해당 이메일로"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarketsansttfmedium"
        android:text="비밀번호 재설정 메일을 보냈습니다."
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gmarketsansttflight"
        android:textColor="@color/white"
        android:text="확인 버튼을 누르시면 로그인 페이지로 돌아갑니다."
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/findPwd_Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="확인"
        android:background="@color/white"
        android:textColor="#0D9FB1"
        android:layout_gravity="center"/>


</LinearLayout>