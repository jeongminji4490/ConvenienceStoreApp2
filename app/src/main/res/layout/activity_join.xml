<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D9FB1"
    android:orientation="vertical"
    tools:context=".JoinActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:textSize="20dp"
            android:text="편알림"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarketsansttfmedium"
        android:text="회원가입"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="50dp"/>

    <EditText
        android:id="@+id/name_join"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="이름"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/phone_join"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="휴대폰번호"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/email_join"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/password_join"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/joinOkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/gmarketsansttfbold"
        android:textColor="#0D9FB1"
        android:background="@color/white"
        android:text="OK"
        android:textSize="20dp"/>

</LinearLayout>